<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mgl7130.avisshop">
    <!-- camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_svg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_svg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.AppThemeWithoutActionBar">
        <activity android:name=".LatestProductActivity"></activity>
        <activity android:name=".BaseActivity" />
        <activity android:name=".ProductDetailsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>